<page-rel
  webc:if="this.rel"
  @html="mdI(`${this.rel} from [${this.venue}](${this.at})`)"
></page-rel>

<h1
  id="title"
  @html="mdI(this.at ? `[${this.title}](${this.at})` : this.title)"
></h1>

<page-meta>
  <date-time
    webc:if="this.isPost"
    :date="this.date"
  ></date-time>

  <page-sub webc:if="this.subtitle">
    <roll-if
      :@content="this.subtitle"
    ></roll-if>
  </page-sub>
</page-meta>

<style webc:bucket="layout">
  page-rel {
    font-style: italic;
  }

  page-rel,
  page-meta {
    font-family: var(--ui-font);
  }

  page-sub{
    &:not(:first-child)::before {
      content: ' â€“ ';
    }

    & p {
      display: inline;
      font-style: italic;
    }
  }
</style>
