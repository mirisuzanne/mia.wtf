<script webc:setup>
  const getAreas = (collections) => collections.area.sort(
    (a, b) => a.data.order - b.data.order
  );
</script>

<template webc:root>
  <h2>Areas</h2>
  <area-item
    webc:for="item of getAreas(this.collections)"
    :@area-item="item"
    :@area-pages="this.collections[`area:${item.data.area}`]"
  ></area-item>
</template>
